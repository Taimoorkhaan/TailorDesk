<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.OrderMeasurement_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#653201">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="17.96dp"
            android:layout_height="16.95dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28.89dp"
            android:src="@drawable/ic_icon_ionic_md_arrow_round_backwhite" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="@font/segoe_ui_semibold"
            android:text="Add Pant Measurement"
            android:textColor="#EFE0BB"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:padding="@dimen/_12sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/app_color"
            android:textSize="@dimen/_18ssp"
            android:text="Basic Detail"
            android:fontFamily="@font/segoe_ui_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/title_service"
            android:text="Service Name"
            android:fontFamily="@font/segoe_ui"
            android:layout_margin="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/phone_number_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:textColor="@color/app_color"
            android:textSize="@dimen/_18ssp"
            android:text="Measurement (inches)"
            android:fontFamily="@font/segoe_ui_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:background="#EFE0BB"
            android:id="@+id/rcv_Measurement"
           android:paddingTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>






</LinearLayout>