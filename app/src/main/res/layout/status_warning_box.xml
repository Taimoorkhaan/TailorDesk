<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/_12ssp"
    android:background="@color/white"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:maxLines="2"
        android:textAllCaps="true"
        android:padding="@dimen/_8sdp"
        android:text="Are you Sure to Change Status To"
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_8sdp"
        android:hint="Enter Discount Amount here"
        android:textColor="@color/app_color2"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
       />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:padding="@dimen/_6sdp"
            android:layout_weight="1"
            android:id="@+id/confrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confrim"
            android:fontFamily="@font/segoe_ui_semibold"
            android:textColor="#EFE0BB"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@drawable/add_item_button"/>

        <Button
            android:padding="@dimen/_6sdp"
            android:layout_weight="1"
            android:id="@+id/cancelbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/segoe_ui_semibold"
            android:textColor="#EFE0BB"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@drawable/add_item_button"/>

    </LinearLayout>


</LinearLayout>