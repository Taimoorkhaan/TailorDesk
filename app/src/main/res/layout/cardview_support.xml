<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="40dp"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/font_bold_color"
        android:text="Name"/>

    <EditText
        android:id="@+id/name_support_ed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:hint="Irfan Mughal"
        android:background="@color/shadowcolor"
        android:textSize="14sp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/font_bold_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/font_bold_color"
        android:text="Email"/>
    <EditText
        android:id="@+id/email_support_ed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="iffu2592@gmail.com"
        android:paddingLeft="20dp"
        android:background="@color/shadowcolor"
        android:textSize="14sp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="@color/font_bold_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textSize="18dp"
        android:textColor="@color/font_bold_color"
        android:text="Message"/>
    <EditText
        android:id="@+id/message_support_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is demo text for checking and visualization of content in user interface."
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:background="@color/shadowcolor"
        android:textColor="@color/font_bold_color"/>
</LinearLayout>
</androidx.cardview.widget.CardView>