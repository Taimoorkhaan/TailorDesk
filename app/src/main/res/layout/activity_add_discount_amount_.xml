<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFE0BB"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#653201">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_icon_arrow_round_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add amount"
            android:fontFamily="@font/segoe_ui_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#EFE0BB"
            android:textAllCaps="true"
            android:textSize="18dp"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:inputType="number"
        android:id="@+id/add_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:hint="Enter Discount Amount here"
        android:textColor="#653201"
        android:textSize="24dp"
        android:gravity="center"
        android:background="@drawable/edit_shape"/>

    <Button
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="add"
        android:fontFamily="@font/segoe_ui_semibold"
        android:textColor="#EFE0BB"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/add_item_button"/>

</RelativeLayout>