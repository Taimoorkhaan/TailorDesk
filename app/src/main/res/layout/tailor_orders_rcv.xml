<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/segoe_ui"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:text="Oct 09, 2020"
                android:textColor="#C7934E"
                android:textSize="10dp" />

            <ImageView
               android:paddingTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:src="@color/black_color"
                android:scaleType="fitXY"
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text"
               />


            <LinearLayout
                android:id="@+id/rcv_layout"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_below="@+id/text"
                android:layout_toRightOf="@id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <TextView
                android:fontFamily="@font/segoe_ui_semibold"
                android:layout_below="@+id/text"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irfan Mughal"
                android:textColor="#3B271D"
                android:textSize="18sp"
                android:gravity="center"
                />

            <TextView
                android:fontFamily="@font/segoe_ui"
                android:id="@+id/customerOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #011020"
                android:textSize="14sp"
                android:textColor="#653201"
                android:gravity="center"
                android:layout_below="@id/customerName"
                android:layout_toRightOf="@id/imageView"/>

            <TextView
                android:fontFamily="@font/segoe_ui"
                android:id="@+id/customerOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1400 (3 items)"
                android:textColor="#646464"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_below="@id/customerOrderNo"
                android:layout_toRightOf="@id/imageView"/>

            <TextView
                android:fontFamily="@font/segoe_ui"
                android:id="@+id/orderDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due on October 21,2020"
                android:textSize="14sp"
                android:textColor="#646464"
                android:gravity="center"
                android:layout_below="@id/customerOrderPrice"
                android:layout_toRightOf="@id/imageView"/>


            </LinearLayout>
            <View
                android:layout_margin="@dimen/_8sdp"

                android:layout_below="@+id/imageView"
                android:background="@color/app_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>


            <ImageView
                android:id="@+id/threedot"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_three_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

        </RelativeLayout>

</LinearLayout>