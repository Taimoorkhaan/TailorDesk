<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/cardimage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/personimage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceName"
                    android:text="Pant 01"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:textColor="#3B271D"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/cardimage"
                    android:layout_toEndOf="@+id/cardimage"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemNo"
                    android:text="Item #1232"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="14dp"
                    android:textColor="#653201"
                    android:layout_toRightOf="@+id/cardimage"
                    android:layout_toEndOf="@+id/cardimage"
                    android:layout_below="@+id/serviceName"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicePrice"
                    android:text="Rs. 300"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="#646464"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/cardimage"
                    android:layout_toEndOf="@+id/cardimage"
                    android:layout_below="@+id/itemNo"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/servicedate"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="#646464"
                    android:text="Due on October 21,2020"
                    android:layout_toRightOf="@id/cardimage"
                    android:layout_toEndOf="@id/cardimage"
                    android:layout_below="@id/servicePrice"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp" />
                <View
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_below="@id/cardimage"
                    android:background="@color/app_color"/>
                <TextView
                    android:id="@+id/editService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="14dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="#C7934E"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/removeService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>



</LinearLayout>