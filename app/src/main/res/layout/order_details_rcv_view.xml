<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView

                android:id="@+id/cardimageCustomerOrder"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/imagebg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pant01_customerOrderInfo"
                android:text="Pant 01"
                android:maxLength="12"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#3B271D"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/cardimageCustomerOrder"
                android:layout_toEndOf="@+id/cardimageCustomerOrder"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item1232_customerOrderInfo"
                android:text="Item #1232"
                android:textSize="14dp"
                android:textColor="#653201"
                android:layout_toRightOf="@+id/cardimageCustomerOrder"
                android:layout_toEndOf="@+id/cardimageCustomerOrder"
                android:layout_below="@+id/pant01_customerOrderInfo"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rs300_customer_orderInfo"
                android:text="Rs. 300"
                android:textColor="#646464"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/cardimageCustomerOrder"
                android:layout_toEndOf="@+id/cardimageCustomerOrder"
                android:layout_below="@+id/item1232_customerOrderInfo"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_customerOrderInfo"
                android:textColor="#646464"
                android:text=""
                android:layout_toRightOf="@id/cardimageCustomerOrder"
                android:layout_toEndOf="@id/cardimageCustomerOrder"
                android:layout_below="@id/rs300_customer_orderInfo"
                android:textSize="14dp"
                android:layout_marginLeft="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/date_customerOrderInfo"
                android:layout_marginLeft="20dp"
                android:background="#C7934E"/>
            <TextView
                android:id="@+id/set_message_customerOrderInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="14dp"
                android:textColor="#646464"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"/>

            <ImageButton
                android:id="@+id/dialog_menu_customerOrderInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_three_dot"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>