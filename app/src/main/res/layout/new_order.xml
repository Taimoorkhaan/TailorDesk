<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/order_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/order_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/order_image"
                android:fontFamily="@font/segui_semi_bold"
                android:text="Irfan Mughal"
                android:textColor="#3B271D"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_userName"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/order_image"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Order #011021"
                android:textColor="#653201"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_no"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/order_image"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Rs.1400 (3 items)"
                android:textColor="#646464"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_price"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@+id/order_image"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Due on October 21,2020"
                android:textColor="#646464"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_advancePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Advance Payment"
                android:textColor="#646464"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/order_advanceRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_advancePayment"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/segui_semi_bold"
                android:text="Rs. 700"
                android:textColor="#00872D"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@+id/order_date"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="#653201" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>