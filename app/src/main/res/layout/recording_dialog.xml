<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/_16sdp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
       android:id="@+id/recordtext"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_12sdp"
        android:text="Record Audio"
        android:fontFamily="@font/segoe_ui_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:src="@drawable/ic_baseline_record_voice_over_24"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/recordtext"
        android:id="@+id/recordicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:textSize="@dimen/_16sdp"
        android:id="@+id/timmer"
        android:gravity="center"
        android:layout_below="@id/recordicon"
        android:text="Press to record Voice"
        android:fontFamily="@font/segoe_ui_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


    <LinearLayout
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/timmer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cancel"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"
            android:textAllCaps="true"
            android:text="Cancel"
            android:fontFamily="@font/segoe_ui_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/save"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"
            android:textAllCaps="true"
            android:text="Save"
            android:fontFamily="@font/segoe_ui_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>