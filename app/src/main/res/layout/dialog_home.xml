<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_40sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="@dimen/_41sdp"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/segoe_ui_semibold"
                android:gravity="center"
                android:text="@string/our_team_will_contact_you_for_regarding_your_upgrade_thanks"
                android:textColor="#646464"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/package_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_29sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/home_shape"
                android:fontFamily="@font/segoe_ui_semibold"
                android:gravity="center"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="#EFE0BB"
                android:textSize="@dimen/_16ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>